# ========================================
# ZYLINK PLATFORM ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control!

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Use Transaction Pooler connection string from Supabase dashboard for IPv4 compatibility
DATABASE_URL="postgresql://postgres.hzsyuqsfksuhqvfquufm:[YOUR-PASSWORD]@aws-0-us-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1&pool_timeout=20"

# Direct connection (for migrations and direct access when needed)
# Note: This requires IPv4 add-on or use only for migrations
DIRECT_URL="postgresql://postgres:[YOUR-PASSWORD]@db.hzsyuqsfksuhqvfquufm.supabase.co:5432/postgres"

# ========================================
# ENVIRONMENT & SERVER
# ========================================
NODE_ENV=development
PORT=4000
LOG_LEVEL=info

# ========================================
# SECURITY & AUTHENTICATION
# ========================================
# JWT Secret for authentication (MUST be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production-minimum-32-chars

# ========================================
# CORS & FRONTEND
# ========================================
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=https://zylike.com

# ========================================
# SHORT LINK CONFIGURATION
# ========================================
SHORTLINK_BASE=https://s.zylike.com

# ========================================
# IMPACT.COM API CONFIGURATION
# ========================================
# CRITICAL: These must be set for Impact.com integration to work
IMPACT_ACCOUNT_SID=your_impact_account_sid_here
IMPACT_AUTH_TOKEN=your_impact_auth_token_here
IMPACT_PROGRAM_ID=your_program_id_here
IMPACT_MEDIA_PARTNER_ID=your_media_partner_id_here
IMPACT_MEDIA_PARTNER_PROPERTY_ID=your_media_partner_property_id_here

# Optional Impact.com settings
IMPACT_API_BASE_URL=https://api.impact.com
IMPACT_SEND_MEDIA_PROPERTY_ID=false
IMPACT_SANITIZE_DEEPLINK=false
IMPACT_DEFAULT_SHAREDID=
IMPACT_USE_OBFUSCATED_SUBID1=false
IMPACT_SUBID1_SALT=

# ========================================
# EMAIL CONFIGURATION
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@zylike.com
FROM_NAME=Zylike Platform

# ========================================
# SECURITY FEATURES
# ========================================
# Enable strict CORS (recommended for production)
STRICT_CORS=false

# Disable Impact.com fallback (recommended for production)
DISABLE_IMPACT_FALLBACK=true

# ========================================
# NOTES
# ========================================
# 1. NEVER commit .env files to version control
# 2. Use strong, unique passwords for each service
# 3. Rotate credentials regularly
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. Keep backup of credentials in secure password manager



